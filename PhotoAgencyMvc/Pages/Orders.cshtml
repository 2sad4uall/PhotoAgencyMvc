@page
@model OrdersModel

@{
    ViewData["Title"] = "Заказы";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Список заказов</h2>
    <div class="row">
        @foreach (var order in Model.Orders)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Заказ #@order.Id</h5>
                        <p class="card-text">Дата: @order.OrderDate</p>
                        <p class="card-text">Статус: @order.Status</p>
                        <p class="card-text">Услуга: @order.Service.Name</p>
                        <p class="card-text">Клиент: @order.Client.FullName</p>
                        @if (User.IsInRole("Admin"))
                        {
                            <a href="/OrdersFolder/Edit/@order.Id" class="btn btn-primary">Редактировать</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>