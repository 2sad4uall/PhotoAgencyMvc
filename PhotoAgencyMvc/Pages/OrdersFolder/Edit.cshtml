@page "{id:int}"
@model EditOrderModel

@{
    ViewData["Title"] = "Редактирование заказа";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Редактирование заказа</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <form method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Order.ClientId" class="form-label">Клиент</label>
                            <select asp-for="Order.ClientId" class="form-control" asp-items="ViewBag.ClientId"></select>
                            <span asp-validation-for="Order.ClientId" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Order.Service.PhotographerId" class="form-label">Фотограф</label>
                            <select asp-for="Order.Service.PhotographerId" class="form-control" asp-items="ViewBag.PhotographerId"></select>
                            <span asp-validation-for="Order.Service.PhotographerId" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Order.ServiceId" class="form-label">Услуга</label>
                            <select asp-for="Order.ServiceId" class="form-control" asp-items="ViewBag.ServiceId"></select>
                            <span asp-validation-for="Order.ServiceId" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Order.Status" class="form-label">Статус</label>
                            <input asp-for="Order.Status" class="form-control" />
                            <span asp-validation-for="Order.Status" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Сохранить</button>
                        <a asp-page="/Orders" class="btn btn-secondary">Отмена</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>