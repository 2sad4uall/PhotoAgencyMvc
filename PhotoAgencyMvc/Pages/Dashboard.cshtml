@page
@model DashboardModel

@{
    ViewData["Title"] = "Дашборд";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Дашборд</h2>
    <div class="row">
        @if (User.IsInRole("Admin"))
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Редактирование услуг</h5>
                        <a href="/Services" class="btn btn-primary">Перейти</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Редактирование фотографов</h5>
                        <a href="/Photographers" class="btn btn-primary">Перейти</a>
                    </div>
                </div>
            </div>
        }
        @if (User.IsInRole("Photographer"))
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Мои услуги</h5>
                        <a href="/Services" class="btn btn-primary">Перейти</a>
                    </div>
                </div>
            </div>
        }
        @if (User.IsInRole("Client"))
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Заказы</h5>
                        <a href="/Orders" class="btn btn-primary">Перейти</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>