 @page
@model LoginModel

@{
    ViewData["Title"] = "Вход";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h3 class="card-title text-center mb-4">Вход</h3>
                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="alert alert-danger">@Model.Message</div>
                    }
                    <form method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Input.Username" class="form-label">Логин</label>
                            <input asp-for="Input.Username" class="form-control" />
                            <span asp-validation-for="Input.Username" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Input.Password" class="form-label">Пароль</label>
                            <input asp-for="Input.Password" class="form-control" type="password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Войти</button>
                        <input type="hidden" asp-for="ReturnUrl" />
                    </form>
                    <p class="text-center mt-3">
                        <a asp-page="./Register">Регистрация</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div> 