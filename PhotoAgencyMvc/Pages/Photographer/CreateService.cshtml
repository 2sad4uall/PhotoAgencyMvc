@page
@model CreateServiceModel

@{
    ViewData["Title"] = "Создание услуги";
}

<h2 class="text-center mb-4">Создание новой услуги</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <form method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Service.Name" class="form-label">Название услуги</label>
                            <input asp-for="Service.Name" class="form-control" />
                            <span asp-validation-for="Service.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Service.Description" class="form-label">Описание</label>
                            <textarea asp-for="Service.Description" class="form-control"></textarea>
                            <span asp-validation-for="Service.Description" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Service.Price" class="form-label">Цена (руб.)</label>
                            <input asp-for="Service.Price" class="form-control" type="number" step="0.01" min="0" />
                            <span asp-validation-for="Service.Price" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-success">Создать услугу</button>
                        <a asp-page="/Services" class="btn btn-secondary">Отмена</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}