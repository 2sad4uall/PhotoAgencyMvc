@page
@model CreatePhotographerModel

@{
    ViewData["Title"] = "Добавить фотографа";
}

<h2 class="text-center mb-4">Добавить нового фотографа</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <form method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Input.FullName" class="form-label">Имя</label>
                            <input asp-for="Input.FullName" class="form-control" />
                            <span asp-validation-for="Input.FullName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Input.Phone" class="form-label">Телефон</label>
                            <input asp-for="Input.Phone" class="form-control" />
                            <span asp-validation-for="Input.Phone" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Input.Bio" class="form-label">Биография</label>
                            <textarea asp-for="Input.Bio" class="form-control"></textarea>
                            <span asp-validation-for="Input.Bio" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Input.Username" class="form-label">Логин</label>
                            <input asp-for="Input.Username" class="form-control"/>
                            <span asp-validation-for="Input.Username" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <input asp-for="Input.Email" class="form-control" type="email" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Input.Password" class="form-label">Пароль</label>
                            <input asp-for="Input.Password" class="form-control" type="password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Input.Photo" class="form-label">Ваша фотография</label>
                            <input asp-for="Input.Photo" type="file" class="form-control" accept="image/*" />
                            <span asp-validation-for="Input.Photo" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-success">Добавить фотографа</button>
                        <a asp-page="/Photographers" class="btn btn-secondary">Отмена</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}