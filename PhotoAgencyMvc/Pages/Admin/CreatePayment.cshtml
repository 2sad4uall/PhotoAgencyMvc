@page
@model CreatePaymentModel

@{
    ViewData["Title"] = "Добавить платеж";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Добавить новый платеж</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <form method="post" class="needs-validation" novalidate>
                        <div class="form-group mb-3">
                            <label asp-for="Payment.OrderId" class="form-label">Заказ</label>
                            <select asp-for="Payment.OrderId" class="form-control" asp-items="ViewBag.OrderId">
                                <option value="">Выберите заказ</option>
                            </select>
                            <span asp-validation-for="Payment.OrderId" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Payment.Amount" class="form-label">Сумма</label>
                            <input asp-for="Payment.Amount" class="form-control" type="number" step="0.01" min="0"/>
                            <span asp-validation-for="Payment.Amount" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label class="form-label">Комиссия (20%)</label>
                            <input type="text" class="form-control" value="@(Model.Payment.Amount * 0.20m)" readonly />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Payment.PaymentMethod" class="form-label">Метод оплаты</label>
                            <input asp-for="Payment.PaymentMethod" class="form-control" required />
                            <span asp-validation-for="Payment.PaymentMethod" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Добавить</button>
                        <a asp-page="/Payments" class="btn btn-secondary">Отмена</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        // Обновление комиссии при изменении суммы
        $('input[name="Payment.Amount"]').on('input', function() {
            var amount = $(this).val() ? parseFloat($(this).val()) : 0;
            $('input[type="text"][readonly]').val((amount * 0.20).toFixed(2));
        });
    </script>
}