@page "{id:int}"
@model EditServiceModel

@{
    ViewData["Title"] = "Редактирование услуги";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Редактирование услуги</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <form method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Service.Name" class="form-label">Название</label>
                            <input asp-for="Service.Name" class="form-control" />
                            <span asp-validation-for="Service.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Service.Description" class="form-label">Описание</label>
                            <textarea asp-for="Service.Description" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Service.Description" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Service.Price" class="form-label">Цена</label>
                            <input asp-for="Service.Price" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Service.Price" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Сохранить</button>
                        <a asp-page="/Services" class="btn btn-secondary">Отмена</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>