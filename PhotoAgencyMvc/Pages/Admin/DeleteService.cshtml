@page "{id:int}"
@model DeleteServiceModel

@{
    ViewData["Title"] = "Удаление услуги";
}

<h2 class="text-center mb-4">Удаление услуги</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h4>Вы уверены, что хотите удалить услугу "@Model.Service.Name"?</h4>
                    <form method="post">
                        <input type="hidden" asp-for="Service.Id" />
                        <button type="submit" class="btn btn-danger">Удалить</button>
                        <a asp-page="/Services" class="btn btn-secondary">Отмена</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>